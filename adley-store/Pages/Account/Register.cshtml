@page
@model adley_store.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Register";
}


<section class="bg-image w-100 p-5"
         style="background-image: url('https://mdbcdn.b-cdn.net/img/Photos/new-templates/search-box/img4.webp');">
    <div class="mask d-flex align-items-center h-100 w-100">
        <div class="container h-100 w-100">
            <div class="row d-flex justify-content-center align-items-center h-100 w-100">
                <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                    <div class="card" style="border-radius: 15px;">
                        <div class="card-body p-5">
                            <h2 class="text-uppercase text-center mb-5">Create an account</h2>

                            <form method="post">
                                @if (TempData.ContainsKey("ErrorMessage"))
                                {
                                    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
                                }
                                <div class="form-outline mb-4">
                                    <label class="form-label" for="userName">Enter Name</label>
                                    <input type="text" id="userName" class="form-control form-control-lg" name="name" asp-for="RegisterUserRequest.Name" required />
                                </div>
                                <div class="form-outline mb-4">
                                    <label class="form-label" for="userEmail">Enter Email</label>
                                    <input type="email" id="userEmail" class="form-control form-control-lg" name="email" asp-for="RegisterUserRequest.Email" required />
                                </div>
                                <div class="form-outline mb-4">
                                    <label class="form-label" for="userPassword">Enter Password</label>
                                    <input type="password" id="userPassword" class="form-control form-control-lg" name="password" asp-for="RegisterUserRequest.Password" required />
                                </div>
                                <div class="form-outline mb-4">
                                    <label class="form-label" for="userAddress">Enter Address</label>
                                    <input type="text" id="userAddress" class="form-control form-control-lg" name="address" asp-for="RegisterUserRequest.Address" required />
                                </div>
                                <div class="form-outline mb-4">
                                    <label class="form-label" for="userProfile">Enter Profile</label>
                                    <input type="text" id="userProfile" class="form-control form-control-lg" name="profile" asp-for="RegisterUserRequest.ProfileUrl" required />
                                </div>
                                <div class="form-check d-flex justify-content-center mb-5">
                                    <input class="form-check-input me-2" type="checkbox" value="" id="form2Example3cg" required />
                                    <label class="form-check-label" for="form2Example3g">
                                        I agree all statements in <a href="#!" class="text-body"><u>Terms of service</u></a>
                                    </label>
                                </div>

                                <div class="d-flex justify-content-center">
                                    <button type="submit"
                                            class="btn btn-success btn-block btn-lg gradient-custom-4 text-body">
                                        Register
                                    </button>
                                </div>

                                <p class="text-center text-muted mt-5 mb-0">
                                    Have already an account? <a href="/Account/Login"
                                                                class="fw-bold text-body"><u>Login here</u></a>
                                </p>

                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>